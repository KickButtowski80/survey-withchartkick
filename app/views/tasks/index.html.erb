<h1>All Questions</h1>
 
 <%= content_tag(:div, nil, id: 'results') do %> 
    <%= render partial: 'tasks/questions_form' %>
 <% end %>
<ul>
<% @completed_tasks.each do |c| %>
    <li><%= c.name %></li>
<% end %>
</ul>
<%= link_to "New Question", new_task_path %> 
<hr/>

<h1>All the answers</h1>
<div id="hide-answers">
   <div id="messages">
     <% Answer.all.each do |answer| %>
     <%= answer.feedback %></br>
      <% end %>
  </div>
</div>
<button id="hide">Show the Answers</button>

<hr /> 
  <%= pie_chart Answer.group(:feedback).count , suffix: "%", refresh: 60 %>  

  
